<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.bytabit.ft.fxui.wallet.WalletUI">
    <children>
        <TableView fx:id="walletTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="walletHashColumn" maxWidth="150.0" prefWidth="150.0" text="Hash"/>
                <TableColumn fx:id="walletDepthColumn" maxWidth="100.0" minWidth="0.0" prefWidth="100.0" text="Depth"/>
                <TableColumn fx:id="walletConficenceTypeColumn" maxWidth="100.0" prefWidth="100.0" text="Confidence"/>
                <TableColumn fx:id="walletDateColumn" maxWidth="100.0" prefWidth="100.0" text="Date"/>
                <TableColumn fx:id="walletMemoColumn" maxWidth="150.0" prefWidth="150.0" text="Memo"/>
                <TableColumn fx:id="walletBtcAmtColumn" maxWidth="150.0" minWidth="0.0" prefWidth="150.0"
                             text="Amount"/>
            </columns>
            <VBox.margin>
                <Insets top="5.0"/>
            </VBox.margin>
        </TableView>
        <HBox>
            <children>
                <GridPane alignment="CENTER_LEFT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="450.0" minWidth="10.0" prefWidth="450.0"/>
                        <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="150.0" minWidth="0.0"
                                           prefWidth="150.0"/>
                        <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0"
                                           prefWidth="150.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="300.0" minWidth="10.0"
                                           prefWidth="300.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label fx:id="downloadMessageLabel" contentDisplay="RIGHT" text="Blockchain Status XXXXX">
                            <graphic>
                                <ProgressBar fx:id="downloadProgressBar" prefWidth="200.0" progress="0.0"/>
                            </graphic>
                        </Label>
                        <Label text="Balance" GridPane.columnIndex="1">
                            <GridPane.margin>
                                <Insets right="10.0"/>
                            </GridPane.margin>
                        </Label>
                        <Label fx:id="walletBalanceLabel" text="XXXXX" GridPane.columnIndex="2">
                            <GridPane.margin>
                                <Insets left="5.0"/>
                            </GridPane.margin>
                        </Label>
                        <HBox alignment="CENTER" spacing="5.0" GridPane.columnIndex="3">
                            <children>
                                <Button fx:id="requestFundsButton" mnemonicParsing="false"
                                        onAction="#handleRequestFunds" prefHeight="26.0" prefWidth="90.0"
                                        text="DEPOSIT"/>
                                <Button mnemonicParsing="false" text="WITHDRAW"/>
                            </children>
                        </HBox>
                    </children>
                </GridPane>
            </children>
            <VBox.margin>
                <Insets bottom="5.0" top="5.0"/>
            </VBox.margin>
            <padding>
                <Insets top="5.0"/>
            </padding>
        </HBox>
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</VBox>
